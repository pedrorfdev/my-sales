{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es6"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "Node16",
    "rootDir": "./",
    "moduleResolution": "node16",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@shared/*": ["src/shared/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true ,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
}}
